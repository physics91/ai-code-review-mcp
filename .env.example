# Code Review MCP Server Environment Variables

# Server Configuration
CODE_REVIEW_MCP_LOG_LEVEL=info
CODE_REVIEW_MCP_LOG_PRETTY=true

# Codex Configuration
CODEX_ENABLED=true
CODEX_TIMEOUT=60000
CODEX_RETRY_ATTEMPTS=3
CODEX_MODEL=

# Gemini Configuration
GEMINI_ENABLED=true
GEMINI_CLI_PATH=/usr/local/bin/gemini
GEMINI_TIMEOUT=60000
GEMINI_RETRY_ATTEMPTS=3
GEMINI_MODEL=gemini-pro

# Review Configuration
REVIEW_MAX_CODE_LENGTH=50000
REVIEW_INCLUDE_CONTEXT=true
REVIEW_DEFAULT_SEVERITY=all

# Feature Flags
ENABLE_CACHE=false
ENABLE_METRICS=false
ENABLE_DEDUPLICATION=true
DEDUPLICATION_THRESHOLD=0.8

# Logging Configuration
LOG_FILE_ENABLED=false
LOG_FILE_PATH=./logs/code-review-mcp.log
LOG_FILE_MAX_SIZE=10M
LOG_FILE_MAX_FILES=5

# Security (Optional)
# ALLOWED_CLI_PATHS=/usr/local/bin/gemini,/opt/gemini/bin/gemini
